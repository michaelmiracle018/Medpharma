{
  "expo": {
    "name": "SendAfrika",
    "privacy": "public",
    "slug": "sendafrika",
    "version": "1.0.9",
    "orientation": "portrait",
    "icon": "./assets/sendafrika_light_logo.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/sendafrika_light_logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.miraclemichael.sendafrikamoneyappstore",
      "infoPlist": {
        "NSFaceIDUsageDescription": "This app uses Face ID to validate your identity.",
        "NSPhotoLibraryUsageDescription": "This app requires you to upload file from your photo library.",
        "NSLocationWhenInUseUsageDescription": "This app requires you to validate your location."
      },
      "runtimeVersion": {
        "policy": "appVersion"
      }
    },
    "android": {
      "softwareKeyboardLayoutMode": "pan",
      "adaptiveIcon": {
        "backgroundColor": "#ffffff"
      },
      "package": "com.sendafrika_mobile",
      "permissions": [
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ],
      "runtimeVersion": "1.0.9"
    },
    "owner": "sendafrika",
    "plugins": [
      [
        "onesignal-expo-plugin",
        {
          "mode": "development",
          "smallIcons": [
            "./assets/sendafrika_light_logo.png"
          ]
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow $(PRODUCT_NAME) to use Face ID to unlock app."
        }
      ],
      "expo-localization",
      "expo-build-properties",
      "expo-font"
    ],
    "extra": {
      "oneSignalAppId": "a2232140-b152-4d62-aeb7-109f24201537",
      "eas": {
        "projectId": "f26ee378-e42f-4c07-9be2-f1266e504290"
      }
    },
    "updates": {
      "url": "https://u.expo.dev/f26ee378-e42f-4c07-9be2-f1266e504290"
    }
  }
}
